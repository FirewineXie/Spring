<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!--通过构造器给对象赋值-->
    <bean id="cat1" class="com.spring.di5.Cat">
        <constructor-arg index="0" type="java.lang.String" value="tom1"></constructor-arg>
        <constructor-arg index="1" type="java.lang.Integer" value="5"></constructor-arg>
        <constructor-arg index="2" type="java.lang.Float" value="43"></constructor-arg>
    </bean>
    <!--通过get/set赋值-->
    <bean id="cat2" class="com.spring.di5.Cat">
        <property name="name" value="tom2"></property>
        <property name="age" value="6"></property>
        <property name="weight" value="34"> </property>
    </bean>
</beans>